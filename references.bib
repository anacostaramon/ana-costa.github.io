   keywords = {adult,lumbar,outcomes,predictive modeling,scoliosis,spine deformity,surgery},
   title = {Validation of Adult Spinal Deformity Surgical Outcome Prediction Tools in Adult Symptomatic Lumbar Scoliosis},
   volume = {48},
