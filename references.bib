@article {Strassmann144,
	author = {Strassmann, Alexandra and {\c C}olak, Yunus and Serra-Burriel, Miquel and Nordestgaard, B{\o}rge G and Turk, Alexander and Afzal, Shoaib and Puhan, Milo A},
	title = {Nationwide indoor smoking ban and impact on smoking behaviour and lung function: a two-population natural experiment},
	volume = {78},
